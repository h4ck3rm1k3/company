<data>
    <xpath expr="/form" position="replace_attributes">
        <form string="Company"/>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <label name="currency"/>
        <field name="currency"/>
        <label name="vat_country"/>
        <field name="vat_country"/>
        <label name="vat_number"/>
        <field name="vat_number"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='general']" position="after">
        <page string="Company" col="2" id="company">
            <label name="parent"/>
            <field name="parent"/>
            <field name="employees" colspan="2"/>
        </page>
        <page string="Reports" col="1" id="reports">
            <separator name="header"/>
            <field name="header"/>
            <separator name="footer"/>
            <field name="footer"/>
        </page>
    </xpath>
</data>
